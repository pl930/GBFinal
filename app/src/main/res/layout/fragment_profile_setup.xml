<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.assignments.koorong.gym_buddy_alpha_.Fragments.ProfileSetup.ProfileSetupFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Before we start, lets setup your profile"
        android:gravity="center_horizontal"
        android:textSize="24dp"
        android:layout_marginBottom="46dp"
        android:layout_above="@+id/maleorfemale"
        android:layout_alignParentLeft="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.13"
        android:orientation="vertical"
        android:id="@+id/maleorfemale"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:background="@drawable/prefs_background"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <RadioButton
            android:id="@+id/radio_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="Male"
            android:layout_above="@+id/np"
            android:layout_alignParentLeft="true"/>

        <RadioButton
            android:id="@+id/radio_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Female" />
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:textSize="32sp"
        />
    <NumberPicker android:id="@+id/np"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
        android:layout_above="@+id/btnProfileNext"
        android:layout_alignParentLeft="true" />


    <Button
        android:id="@+id/btnProfileNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:text="Continue"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />


</RelativeLayout>
